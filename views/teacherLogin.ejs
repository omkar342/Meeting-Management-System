<%- include("partials/header")%>

<div class="register">
    <div class="container">
        <div class="logContainer">
            <div class="left">
                <h1>Sign In And Make Your Day More Effective And Make Most Out of It.</h1>
                <div class="img">
                    <img src="photos/happy5.svg" alt="">
                    <p>Don't have an account ?<a href="/teacher-signup">SignUp</a>
                    </p>
                </div>
            </div>
            <div class="vLine"></div>
            <div class="right">
                <h1>Sign In</h1>
                <form action="/teacher-signin" method="POST">
                    <label for="email">Email Address:</label>
                    <input type="email" placeholder="Enter Your Email" name="email" id="email">
                    <label for="password">Password:</label>
                    <input type="password" placeholder="Enter Your Password" name="password" id="password">
                    <% if (error != null) {%>
                        <div class="passwordError">
                            <p>*Invalid Username or Password.</p>
                        </div>
                    <% } %>
                    <button type="submit" class="orangeButton">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer")%>